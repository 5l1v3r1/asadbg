# Main gdbinit script to get a valid environment in gdb
# Usage: can't be used as standalone. Needs to be loaded/patched by asadbg.py
#
# gdb needs to be started with right privileges to debug the serial

source ignore_errors.py

# setup file and paths
printf "[gdbinit_9627] Configuring paths...\n"
file /home/aa/cisco/firmware/asav962/_asav962-7.qcow2.extracted/rootfs/asa/bin/lina
set solib-absolute-prefix /home/aa/cisco/firmware/asav962/_asav962-7.qcow2.extracted/rootfs

set disassembly-flavor intel
# disable the "Type <return> to continue, or q <return> to quit" pagination prompt in GDB
printf "[gdbinit_9627] Disabling pagination...\n"
set height 0
set pagination off

if 1 == 1
    printf "[gdbinit_9627] Connecting over TCP/IP...\n"
    # uncomment this if you want to see why a connection to TCP/IP fails
    #set debug remote 1
    target remote 127.0.0.1:5013
    printf "[gdbinit_9627] Connected.\n"
end
if 0 == 1
    printf "[gdbinit_9627] Connecting over USB...\n"
    target extended-remote /dev/ttyUSB0
    printf "[gdbinit_9627] Connected.\n"
end

#set follow-fork-mode child

if 0 == 1
    source find_lina_pid.py
end

# *clock_interval = 0 (version specific)
set *0x55555a3f1560 = 0
printf "[gdbinit_9627] Watchdog disabled\n"

source asa_libmempool.py
if 0 == 1
    source asa_libdlmalloc.py
    dlcallback register mpcallback libmempool/libmempool
end
if 1 == 1
    source asa_libptmalloc.py
    ptcallback register mpcallback libmempool/libmempool
    # some dlmalloc structures used even on 64-bit
    source asa_libdlmalloc.py
    dlcallback register mpcallback libmempool/libmempool
end
printf "[gdbinit_9627] heap debugging plugins loaded\n"

source ../debug/libcisco/ikev2.py
source ../debug/libcisco/ikev1.py
source ../debug/dps.py
source ../debug/gdb_scripts/bps_9627_libc.gdb
printf "[gdbinit_9627] Additional gdb scripts loaded\n"

if 0 == 1
    printf "[gdbinit_9627] Syncing...\n"
    source asa_sync.py
    ignore-errors sync
end
if 0 == 1
    display /5i $pc
end
if 0 == 1
    printf "[gdbinit_9627] Continuing...\n"
    continue
end

printf "[gdbinit_9627] Done.\n"
